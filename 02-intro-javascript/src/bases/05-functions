const saludar2 = ( nombre ) => {
    return `Hola, ${ nombre }`;
}

const saludar3 = ( nombre ) => `Hola, ${ nombre }`;
const saludar4 = () => `Hola, Mundo`;



console.log( saludar2("Naruto"));
console.log( saludar3("Goku"));
console.log( saludar4());

